@model BundleGames.Models.Korisnik

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<head>
    <style>
        body {
            background: -webkit-linear-gradient(left, #284262,#0f475c);
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Akaunt"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Korisnik</h4>
                <hr />

                @Html.ValidationSummary(true, "USER NOT FOUND!", new { @class = "text-danger" })
                <div class="form-group text-white">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter Username...", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group text-white">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Password...", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group text-white">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-success mr-3" />
                        or
                        @Html.ActionLink("Register as a new user", "Register", "Akaunt", null, new { @class = "btn btn-primary ml-3" })


                    </div>
                </div>
            </div>
        }
    </div>
</body>


