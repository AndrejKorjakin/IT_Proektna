<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table text-white js-delete" id="tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game_Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Release_Date)
            </th>
