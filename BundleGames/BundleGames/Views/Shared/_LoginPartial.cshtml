@using Microsoft.AspNet.Identity

@if (Session["Username"]!=null)
{
    
        @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right ml-5">
    <li class="nav-item">
    
        <img class="mr-3" style="width:45px;height:45px;" src="~/Logo/Cart.png" />
   
        
        @Html.ActionLink("Shopping Cart", "Cart", "Games", null, htmlAttributes: new {  @class = "btn btn-outline-success mr-4" })
    </li>

    <li class="nav-item">
        @Html.ActionLink(Session["Username"].ToString(), "ProfileShow", "Games", new { id = Session["UserId"] }, new { @class = " btn btn-outline-info mt-1" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Log Out", "LogOut", "Akaunt", null, new { @class = "btn btn-outline-danger ml-3 mt-1" })
    </li>
</ul>
    }

else
{


    <div class="navbar">
        <div class="navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <img class="mr-2" style="width:45px;height:45px;" src="~/Logo/Cart.png" />
                    @Html.ActionLink("Shopping Cart", "Register", "Account", routeValues: null, htmlAttributes: new { id = "cartlink", @class = "btn btn-outline-success mr-4" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Register", "Register", "Akaunt", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-outline-info mt-1" })
                </li>

                <li class="nav-item">

                    @Html.ActionLink("Log in", "Login", "Akaunt", routeValues: null, htmlAttributes: new { id = "loginLink", @class = " mr-5 nav-item btn btn-outline-warning ml-4 mt-1" })
                </li>

            </ul>
        </div>
    </div>

}
