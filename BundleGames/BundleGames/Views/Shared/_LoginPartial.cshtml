@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
               <label class="text-white small">Welcome</label> @Html.ActionLink(@User.Identity.Name,"Index","Korisniks", new { Username = @User.Identity.Name }, new {@class="btn btn-outline-info mr-3 ml-2" })
            </li>
            <li><a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{


    <div class="navbar">
        <div class="navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <img class="mr-2" style="width:45px;height:45px;" src="~/Logo/Cart.png"/>
                    @Html.ActionLink("Shopping Cart", "Register", "Account", routeValues: null, htmlAttributes: new { id = "cartlink", @class= "btn btn-outline-success mr-4" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class="btn btn-outline-info mt-1" })
                </li>

                <li class="nav-item">

                    @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= " mr-5 nav-item btn btn-outline-warning ml-4 mt-1" })
                </li>

            </ul>
        </div>
    </div>
    
            }
